<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_50"
    tools:context="vn.nip.around.Fragment.Common.PromotionFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:visibility="visible">

            <FrameLayout
                android:id="@+id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_main"
                android:visibility="visible">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <vn.nip.around.Custom.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="16dp"
                        android:text="@string/promo_today"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:fontName="OpenSans_Light"/>

                    <ImageButton
                        android:id="@+id/back"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="16dp"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_close_white_24dp" />
                </FrameLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="48dp"
                    android:padding="16dp"
                    android:src="@drawable/cover_promotion" />
            </FrameLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <vn.nip.around.Custom.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/want_shipping"
                        android:textColor="@color/gray_900"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <vn.nip.around.Custom.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:lineSpacingExtra="4dp"
                        android:text="@string/des_want_shipping"
                        android:textColor="@color/gray_600"
                        android:textSize="12sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <vn.nip.around.Custom.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/how_invite"
                        android:textColor="@color/main"
                        android:textSize="14sp"
                        android:textStyle="italic" />

                    <LinearLayout
                        android:id="@+id/share_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="48dp"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <vn.nip.around.Custom.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="@string/your_invite_code"
                            android:textColor="@color/gray_600"
                            android:textSize="12sp" />

                        <vn.nip.around.Custom.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:background="@drawable/border_bottom"
                            android:hint="@string/promotion_code"
                            android:maxLines="1"
                            android:padding="8dp"
                            android:textColorHint="@color/gray_300"
                            android:textSize="14sp" />

                        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/confirm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:layout_gravity="top|center_horizontal"
                            android:layout_marginTop="16dp"
                            android:foreground="?android:selectableItemBackground"
                            app:cardBackgroundColor="@color/main"
                            app:cardCornerRadius="24dp"
                            card_view:cardElevation="0dp"
                            card_view:cardUseCompatPadding="false">

                            <vn.nip.around.Custom.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="12dp"
                                android:text="@string/share"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                        </android.support.v7.widget.CardView>

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:orientation="horizontal"
                            android:paddingTop="16dp">

                            <ImageButton
                                android:layout_width="0dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:adjustViewBounds="true"
                                android:clickable="false"
                                android:background="@android:color/transparent"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_message" />

                            <ImageButton
                                android:layout_width="0dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:clickable="false"
                                android:adjustViewBounds="true"
                                android:background="@android:color/transparent"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_facebook" />

                            <ImageButton
                                android:layout_width="0dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:clickable="false"
                                android:adjustViewBounds="true"
                                android:background="@android:color/transparent"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_twister" />

                            <ImageButton
                                android:layout_width="0dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:clickable="false"
                                android:layout_weight="1"
                                android:adjustViewBounds="true"
                                android:background="@android:color/transparent"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_instagram" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/gray_400"></FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <vn.nip.around.Custom.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/free_promo_code"
                            android:textColor="@color/gray_900"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <vn.nip.around.Custom.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:lineSpacingExtra="4dp"
                            android:text="@string/des_free_promo_code"
                            android:textColor="@color/gray_600"
                            android:textSize="12sp" />

                        <vn.nip.around.Custom.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/how_gift_promo"
                            android:textColor="@color/main"
                            android:textSize="14sp"
                            android:textStyle="italic" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="48dp"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <vn.nip.around.Custom.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="@string/your_gifting_code"
                            android:textColor="@color/gray_600"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_bottom"
                            android:orientation="horizontal">

                            <vn.nip.around.Custom.CustomEditText
                                android:id="@+id/promo_code"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:maxLines="1"
                                android:padding="8dp"
                                android:textColorHint="@color/gray_300"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/check_promo"
                                android:layout_width="16dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_check_promotion"
                                android:visibility="gone" />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</FrameLayout>
