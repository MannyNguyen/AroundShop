<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="vn.nip.around.Fragment.Dialog.MessageDialogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:padding="16dp">

        <vn.nip.around.Custom.CustomTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="fafsdf"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:visibility="gone" />

        <vn.nip.around.Custom.CustomTextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:inputType="textMultiLine"
            android:text=""
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">

            <vn.nip.around.Custom.CustomButton
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_gray"
                android:layout_gravity="center"
                android:text="@string/cancel"
                android:layout_marginRight="16dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="gone"
                app:fontName="OpenSans_Light" />

            <vn.nip.around.Custom.CustomButton
                android:id="@+id/confirm"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/border_button_black"
                android:layout_gravity="center"
                android:text="@string/ok"
                android:layout_marginLeft="16dp"
                android:textAllCaps="false"
                android:textColor="@color/gray_900"
                android:textSize="14sp" />
        </LinearLayout>


    </LinearLayout>

</FrameLayout>
