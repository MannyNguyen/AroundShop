<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"

        android:orientation="vertical">

        <FrameLayout
            android:layout_width="1.5dp"
            android:layout_height="0dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@color/main"></FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_pickup_location" />

            <vn.nip.around.Custom.CustomTextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-2dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/line_bottom"
            android:layout_width="1.5dp"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@color/gray_500"></FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:background="@drawable/border_bottom_main"
        android:orientation="horizontal">

        <vn.nip.around.Custom.CustomAutoComplete
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:backgroundTint="@color/white"
            android:hint="@string/enter_location"
            android:imeOptions="actionNext"
            android:inputType="textAutoComplete|textAutoCorrect"

            android:paddingBottom="20dp"
            android:paddingRight="12dp"
            android:paddingTop="14dp"
            android:textColor="@color/main"
            android:textColorHint="@color/gray_400"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/remove"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_remove_pickup" />


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/edit"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:adjustViewBounds="true"

                android:background="@android:color/transparent"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_edit_pickup" />


            <ImageView
                android:id="@+id/is_full_info"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="top|right"
                android:layout_margin="4dp"
                android:src="@drawable/circle_red" />
        </FrameLayout>

    </LinearLayout>
</LinearLayout>