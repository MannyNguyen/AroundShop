<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    tools:context="Fragment.Common.DetailLocationFragment">

    <vn.nip.around.Custom.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/location"
        android:textColor="@color/gray_900"
        android:textSize="12sp"
        app:fontName="OpenSans_SemiBold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <vn.nip.around.Custom.CustomButton
            android:id="@+id/place_1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/transport_selected"
            android:foreground="?selectableItemBackground"
            android:text="@string/place_1"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:fontName="OpenSans_SemiBold" />

        <vn.nip.around.Custom.CustomButton
            android:id="@+id/place_2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/collect_unselected"
            android:foreground="?selectableItemBackground"
            android:text="@string/place_2"
            android:textAllCaps="false"
            android:textColor="@color/gray_600"
            android:textSize="12sp"
            app:fontName="OpenSans_SemiBold" />

        <vn.nip.around.Custom.CustomButton
            android:id="@+id/place_3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/purchase_unselected"
            android:foreground="?selectableItemBackground"
            android:text="@string/place_3"
            android:textAllCaps="false"
            android:textColor="@color/gray_600"
            android:textSize="12sp"
            app:fontName="OpenSans_SemiBold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_gray_dash_400"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/ic_location"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_location_1" />

        <vn.nip.around.Custom.CustomTextView
            android:id="@+id/pickup_addresss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:textColor="@color/gray_600"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contact_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_gray_dash_400"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <vn.nip.around.Custom.CustomTextView
                android:id="@+id/recipent_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_name"
                android:textColor="@color/gray_700"
                android:textSize="12sp"
                app:fontName="OpenSans_SemiBold" />

            <vn.nip.around.Custom.CustomTextView
                android:id="@+id/recipent_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/gray_600"
                android:textSize="12sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/call"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:foreground="?selectableItemBackground"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_call_now" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_gray_dash_400"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <vn.nip.around.Custom.CustomTextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/item_name"
                android:textColor="@color/gray_700"
                android:textSize="12sp"
                app:fontName="OpenSans_SemiBold" />

            <vn.nip.around.Custom.CustomTextView
                android:id="@+id/type_pickup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:textColor="@color/main"
                android:textSize="16sp"
                app:fontName="OpenSans_SemiBold" />

            <vn.nip.around.Custom.CustomTextView
                android:id="@+id/fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textColor="@color/main"
                android:textSize="16sp"
                app:fontName="OpenSans_SemiBold" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_location_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="true"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:visibility="gone"></android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/container_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"></LinearLayout>

        <vn.nip.around.Custom.CustomTextView
            android:id="@+id/pay_now_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:text="@string/pay_now_1x5"
            android:textColor="@color/red_500"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/actual_money_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_300" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <vn.nip.around.Custom.CustomTextView
                    android:id="@+id/reality_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/reality_purchase"
                    android:textColor="@color/gray_700"
                    android:textSize="12sp"
                    app:fontName="OpenSans_SemiBold" />

                <vn.nip.around.Custom.CustomTextView
                    android:id="@+id/actual_money"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:padding="8dp"
                    android:text="100,000,000"
                    android:textColor="@color/main"
                    android:textSize="12sp"
                    app:fontName="OpenSans_SemiBold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/img_bill_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_300" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <vn.nip.around.Custom.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="@string/invoice_image"
                    android:textColor="@color/gray_700"
                    android:textSize="12sp"
                    app:fontName="OpenSans_SemiBold" />

                <ImageButton
                    android:id="@+id/img_bill"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:foreground="?selectableItemBackground"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_image" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/note_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_gray_dash_400"
        android:orientation="vertical"
        android:padding="8dp">

        <vn.nip.around.Custom.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/note"
            android:textColor="@color/gray_700"
            android:textSize="12sp"
            app:fontName="OpenSans_SemiBold" />

        <vn.nip.around.Custom.CustomTextView
            android:id="@+id/note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="fdsfasdfafds"
            android:textColor="@color/gray_600"
            android:textSize="12sp" />


    </LinearLayout>

</LinearLayout>
