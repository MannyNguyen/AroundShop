<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <ImageView
            android:layout_width="2dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:src="@drawable/circle_gray" />

        <ImageView
            android:layout_width="2dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:src="@drawable/circle_gray" />

        <ImageView
            android:layout_width="2dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:src="@drawable/circle_gray" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_book_last" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <vn.nip.around.Custom.CustomTextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:foreground="?selectableItemBackground"
                android:maxLines="1"
                android:textColorHint="@color/gray_400"
                android:hint="@string/input_drop_place"
                android:textColor="@color/gray_900"
                android:textSize="12sp"
                app:fontName="OpenSans_SemiBold" />


        </LinearLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/edit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:padding="2dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_pickup_edit" />



        </FrameLayout>
    </LinearLayout>
</LinearLayout>