<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="Fragment.Common.FullOrderCommonFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:animateLayoutChanges="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:animateLayoutChanges="true"
                            android:orientation="vertical"
                            android:padding="12sp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <vn.nip.around.Custom.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/order_id"
                                    android:textColor="@color/main"
                                    android:textSize="16sp"
                                    app:fontName="OpenSans_SemiBold" />

                                <vn.nip.around.Custom.CustomTextView
                                    android:id="@+id/order_code"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:textColor="@color/main"
                                    android:textSize="16sp"
                                    app:fontName="OpenSans_SemiBold" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:background="@drawable/border_gray_dash_400"
                                android:orientation="horizontal"
                                android:padding="8dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="24dp"
                                    android:adjustViewBounds="true"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/ic_clock_main" />

                                <vn.nip.around.Custom.CustomTextView
                                    android:id="@+id/delivery_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="12dp"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textColor="@color/gray_600"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <fragment
                                android:id="@+id/detail_location_fragment"
                                android:name="vn.nip.around.Fragment.Common.DetailLocationFragment"
                                class="vn.nip.around.Fragment.Common.DetailLocationFragment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                tools:layout="@layout/fragment_detail_location" />


                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"></FrameLayout>

                            <LinearLayout
                                android:id="@+id/drop_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <vn.nip.around.Custom.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:background="@drawable/solid_main"
                                    android:padding="8dp"
                                    android:text="@string/delivery_location"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    app:fontName="OpenSans_SemiBold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:background="@drawable/border_gray_dash_400"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:padding="8dp">

                                    <FrameLayout
                                        android:layout_width="8dp"
                                        android:layout_height="8dp"
                                        android:layout_marginLeft="8dp"
                                        android:adjustViewBounds="true"
                                        android:background="@color/gray_600"
                                        android:scaleType="centerInside" />

                                    <vn.nip.around.Custom.CustomTextView
                                        android:id="@+id/drop_address"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="12dp"
                                        android:ellipsize="end"
                                        android:gravity="center_vertical"
                                        android:textColor="@color/gray_600"
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:background="@drawable/border_gray_dash_400"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:padding="8dp">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <vn.nip.around.Custom.CustomTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/recipient_name"
                                            android:textColor="@color/gray_700"
                                            android:textSize="12sp"
                                            app:fontName="OpenSans_SemiBold" />

                                        <vn.nip.around.Custom.CustomTextView
                                            android:id="@+id/drop_recipent_name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="8dp"
                                            android:layout_marginTop="4dp"
                                            android:textColor="@color/gray_600"
                                            android:textSize="12sp" />
                                    </LinearLayout>

                                    <FrameLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <ImageButton
                                            android:id="@+id/drop_call"
                                            android:layout_width="40dp"
                                            android:layout_height="wrap_content"
                                            android:adjustViewBounds="true"
                                            android:background="@android:color/transparent"
                                            android:foreground="?selectableItemBackground"
                                            android:padding="4dp"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/ic_call_now" />
                                    </FrameLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/drop_note_area"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:background="@drawable/border_gray_dash_400"
                                    android:orientation="vertical"
                                    android:padding="8dp">

                                    <vn.nip.around.Custom.CustomTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/note"
                                        android:textColor="@color/gray_700"
                                        android:textSize="12sp"
                                        app:fontName="OpenSans_SemiBold" />

                                    <vn.nip.around.Custom.CustomTextView
                                        android:id="@+id/drop_note"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="8dp"
                                        android:layout_marginTop="4dp"
                                        android:textColor="@color/gray_600"
                                        android:textSize="12sp" />
                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/shipper_area"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/border_gray_dash_400"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="8dp"
                                android:visibility="visible">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <vn.nip.around.Custom.CustomTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/shipper"
                                        android:textColor="@color/gray_700"
                                        android:textSize="12sp"
                                        app:fontName="OpenSans_SemiBold" />

                                    <vn.nip.around.Custom.CustomTextView
                                        android:id="@+id/shipper_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="8dp"
                                        android:layout_marginTop="4dp"
                                        android:textColor="@color/gray_900"
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageButton
                                        android:id="@+id/call_shipper"
                                        android:layout_width="40dp"
                                        android:layout_height="wrap_content"
                                        android:adjustViewBounds="true"
                                        android:background="@android:color/transparent"
                                        android:foreground="?selectableItemBackground"
                                        android:padding="4dp"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/ic_call_now" />
                                </FrameLayout>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="12dp"
                                android:layout_marginTop="20dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/ic_payment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:adjustViewBounds="true"
                                    android:scaleType="centerInside" />

                                <vn.nip.around.Custom.CustomTextView
                                    android:id="@+id/text_payment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="12dp"
                                    android:textColor="@color/main"
                                    android:textSize="12sp"
                                    app:fontName="OpenSans_SemiBold" />
                            </LinearLayout>


                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:background="@color/gray_400"></FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <vn.nip.around.Custom.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total_order_code"
                                android:textColor="@color/gray_900"
                                android:textSize="12sp"
                                app:fontName="OpenSans_SemiBold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp"
                                android:layout_marginLeft="32dp"
                                android:layout_marginRight="32dp"
                                android:layout_marginTop="12dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/container_purchase_fee"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:orientation="horizontal"
                                    android:weightSum="1">

                                    <vn.nip.around.Custom.CustomTextView
                                        android:id="@+id/item_fee_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="16dp"
                                        android:gravity="left"
                                        android:text="@string/purchase_cost"
                                        android:textColor="@color/gray_600"
                                        android:textSize="12sp" />

                                    <vn.nip.around.Custom.CustomTextView
                                        android:id="@+id/item_cost"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="right"
                                        android:textColor="@color/gray_600"
                                        android:textSize="12sp"

                                        app:fontName="OpenSans_SemiBold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:orientation="horizontal"
                                    android:weightSum="1">

                                    <vn.nip.around.Custom.CustomTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="left"
                                        android:text="@string/service_fee"
                                        android:textColor="@color/gray_600"
                                        android:textSize="12sp" />

                                    <ImageView
                                        android:id="@+id/fee_service"
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:layout_marginLeft="4dp"
                                        android:layout_marginRight="16dp"
                                        android:adjustViewBounds="true"
                                        android:src="@drawable/ic_fee_shipping" />

                                    <vn.nip.around.Custom.CustomTextView
                                        android:id="@+id/service_fee"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="right"
                                        android:textColor="@color/gray_600"
                                        android:textSize="12sp"
                                        app:fontName="OpenSans_SemiBold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:orientation="horizontal"
                                    android:weightSum="1">

                                    <vn.nip.around.Custom.CustomTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="left|center_vertical"
                                        android:text="@string/shipping_fee"
                                        android:textColor="@color/gray_600"
                                        android:textSize="12sp" />

                                    <ImageView
                                        android:id="@+id/fee_shipping"
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:layout_marginLeft="4dp"
                                        android:layout_marginRight="16dp"
                                        android:adjustViewBounds="true"
                                        android:src="@drawable/ic_fee_shipping" />

                                    <vn.nip.around.Custom.CustomTextView
                                        android:id="@+id/shipping_fee"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="right"
                                        android:textColor="@color/gray_600"
                                        android:textSize="12sp"
                                        app:fontName="OpenSans_SemiBold" />
                                </LinearLayout>

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="1px"
                                    android:layout_marginTop="8dp"
                                    android:background="@color/gray_600"></FrameLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:gravity="right"
                                    android:orientation="horizontal"
                                    android:weightSum="1">

                                    <vn.nip.around.Custom.CustomTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="16dp"
                                        android:gravity="left"
                                        android:text="@string/total"
                                        android:textSize="12sp"
                                        app:fontName="OpenSans_Bold" />

                                    <vn.nip.around.Custom.CustomTextView
                                        android:id="@+id/total"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="right"
                                        android:textColor="@color/main"
                                        android:textSize="12sp"
                                        app:fontName="OpenSans_Bold" />
                                </LinearLayout>
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>

                <LinearLayout
                    android:id="@+id/confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/main"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <vn.nip.around.Custom.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="@string/your_order_code"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <vn.nip.around.Custom.CustomTextView
                        android:id="@+id/code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/progress" />
        </FrameLayout>

    </LinearLayout>
</FrameLayout>
