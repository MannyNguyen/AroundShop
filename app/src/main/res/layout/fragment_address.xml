<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragment.Pickup.AddressFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/toolbar" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center"
                        android:layout_margin="14dp"
                        android:background="@color/blue_500"></FrameLayout>

                    <vn.nip.around.Custom.CustomEditText
                        android:id="@+id/address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:inputType="text"
                        android:gravity="center_vertical"
                        android:hint="@string/enter_location"
                        android:maxLines="1"
                        android:padding="12dp"
                        android:textColor="@color/gray_900"
                        android:textColorHint="@color/gray_600"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/remove"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:foreground="?selectableItemBackground"
                        android:padding="15dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_remove_pickup" />
                </LinearLayout>

            </LinearLayout>
        </android.support.design.widget.AppBarLayout>


        <FrameLayout
            android:id="@+id/pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:clickable="true"
            android:foreground="?selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_pin_map_1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:orientation="vertical">

                    <vn.nip.around.Custom.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/set_pin_location"
                        android:textColor="@color/gray_900"
                        android:textSize="12sp"
                        app:fontName="OpenSans_SemiBold" />

                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="bottom"
                android:background="@color/gray_300" />


        </FrameLayout>

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:background="@color/white"
            android:clickable="true">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"></android.support.v7.widget.RecyclerView>

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/default_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/favorite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <vn.nip.around.Custom.CustomTextView
                            android:id="@+id/title_favorite"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:background="@color/gray_200"
                            android:gravity="center_vertical"
                            android:paddingLeft="12dp"
                            android:text="@string/favorite_location"
                            android:textColor="@color/gray_900"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:id="@+id/favorites"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"></LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <vn.nip.around.Custom.CustomTextView
                            android:id="@+id/title_recent"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:background="@color/gray_200"
                            android:gravity="center_vertical"
                            android:paddingLeft="12dp"
                            android:text="@string/recent_location"
                            android:textColor="@color/gray_900"
                            android:textSize="12sp" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_history"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:overScrollMode="never"
                            android:nestedScrollingEnabled="false"></android.support.v7.widget.RecyclerView>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>


        </FrameLayout>
    </LinearLayout>

    <include layout="@layout/progress" />

</FrameLayout>
