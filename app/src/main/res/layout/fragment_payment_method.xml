<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    tools:context="vn.nip.around.Fragment.Common.PaymentMethodFragment">

    <include layout="@layout/progress" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <include layout="@layout/toolbar_close" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <vn.nip.around.Custom.CustomRadioButton
                android:id="@+id/cast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/main"
                android:textAllCaps="true"
                android:checked="false"
                android:drawableLeft="@drawable/ic_cast_unselected"

                android:drawablePadding="16dp"
                android:gravity="center_vertical|left"
                android:layoutDirection="rtl"
                android:text="@string/cast"
                android:textColor="@color/gray_600"
                android:textSize="14sp"
                app:fontName="OpenSans_SemiBold"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:src="@drawable/line" />

            <vn.nip.around.Custom.CustomRadioButton
                android:id="@+id/credit_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/main"
                android:checked="false"
                android:drawableLeft="@drawable/ic_online_unselected"
                android:drawablePadding="16dp"
                android:gravity="center_vertical|left"
                android:layoutDirection="rtl"
                android:textAllCaps="true"
                android:text="@string/online_payment"
                android:textColor="@color/gray_600"
                android:textSize="14sp"
                app:fontName="OpenSans_SemiBold"/>


        </RadioGroup>


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/confirm"
            android:layout_width="160dp"
            android:layout_height="44dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="16dp"
            android:foreground="?android:selectableItemBackground"
            card_view:cardBackgroundColor="@color/main"
            card_view:cardCornerRadius="22dp"
            card_view:cardElevation="0dp"
            card_view:cardUseCompatPadding="false">

            <vn.nip.around.Custom.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:fontName="OpenSans_Light"
                android:textSize="16sp" />
        </android.support.v7.widget.CardView>

    </LinearLayout>
</FrameLayout>
