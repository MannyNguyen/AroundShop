<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"

        android:scaleType="centerCrop"
        android:src="@drawable/bg_gift_me" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <vn.nip.around.Custom.CustomTextView
                android:id="@+id/service_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="@color/red_500"
                android:textSize="13sp"
                app:fontName="OpenSans_SemiBold" />

            <vn.nip.around.Custom.CustomTextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/gray_900"
                android:textSize="10sp"
                app:fontName="OpenSans_SemiBold" />

            <vn.nip.around.Custom.CustomTextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/gray_900"
                android:textSize="10sp" />


            <vn.nip.around.Custom.CustomTextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main"
                android:textSize="13sp"
                app:fontName="OpenSans_SemiBold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <vn.nip.around.Custom.CustomButton
                    android:id="@+id/re_order"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_gravity="bottom"
                    app:fontName="OpenSans_SemiBold"
                    android:layout_marginBottom="2dp"
                    android:background="@color/main"
                    android:foreground="?selectableItemBackground"

                    android:text="@string/re_order"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <vn.nip.around.Custom.CustomButton
                    android:id="@+id/more_reorder"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_gravity="top"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/border_button_black"
                    android:foreground="?selectableItemBackground"
                    app:fontName="OpenSans_SemiBold"
                    android:text="@string/more"
                    android:textAllCaps="false"
                    android:textColor="@color/gray_900"
                    android:textSize="11sp" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>