<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:padding="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/product" />

            <FrameLayout
                android:id="@+id/sale_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_sale" />

                <vn.nip.around.Custom.CustomTextView
                    android:id="@+id/product_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:text="-20"
                    android:textColor="@color/white"
                    android:textSize="7dp" />
            </FrameLayout>
        </FrameLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <vn.nip.around.Custom.CustomTextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="fdsafasdfsdfdsffsaf"
                android:textColor="@color/gray_900"
                android:textSize="10sp"
                app:fontName="OpenSans_SemiBold" />

            <vn.nip.around.Custom.CustomTextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="30000000"
                android:textColor="@color/red_500"
                android:textSize="13sp" />

            <vn.nip.around.Custom.CustomTextView
                android:id="@+id/product_old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="fdsafasdfsdfdsffsaf"
                android:textColor="@color/gray_900"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <vn.nip.around.Custom.CustomButton
                    android:id="@+id/buy_now"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="2dp"
                    android:background="@color/main"
                    android:foreground="?selectableItemBackground"
                    app:fontName="OpenSans_SemiBold"
                    android:text="@string/buy_now"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <vn.nip.around.Custom.CustomButton
                    android:id="@+id/more_product"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_gravity="top"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/border_button_black"
                    android:foreground="?selectableItemBackground"
                    app:fontName="OpenSans_SemiBold"
                    android:text="@string/more"
                    android:textAllCaps="false"

                    android:textColor="@color/gray_900"
                    android:textSize="11sp" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>