<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginBottom="1dp"
                android:background="@color/gray_400"></FrameLayout>

            <FrameLayout
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@color/gray_400">


            </FrameLayout>

            <FrameLayout
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"></FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/border_bottom_gray_400"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="invisible"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/main"></FrameLayout>
            </FrameLayout>

            <vn.nip.around.Custom.CustomTextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="Drop here"
                android:maxLines="1"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                android:paddingRight="12dp"
                android:textColor="@color/gray_400"
                android:textColorHint="@color/gray_400"
                android:textSize="12sp"
                app:fontName="OpenSans_SemiBold" />

        </LinearLayout>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/is_selected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="@color/white"
        android:clickable="false"
        android:visibility="gone"></FrameLayout>
</FrameLayout>