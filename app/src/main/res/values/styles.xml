<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/gray_600</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:textColorSecondary">@color/gray_600</item>
        <item name="android:textColorPrimary">@color/gray_600</item>

    </style>


    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <!--<item name="android:windowDisablePreview">true</item>-->

    </style>

    <style name="AppTheme.NoActionBar.FullScreen">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>


    <style name="TabProduct" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/main</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/main</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_600</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="CustomRating" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_12</item>
        <item name="android:indeterminateDrawable">@drawable/rating_12</item>
        <item name="android:maxHeight">24dip</item>
        <item name="android:maxWidth">24dip</item>
    </style>



</resources>
